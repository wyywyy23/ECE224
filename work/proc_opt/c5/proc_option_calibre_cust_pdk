#######################################
## DRC Switches
#######################################
set _masterChecks [CUSTOM::DEFINE -name \$GROUP_OPTIONS -choices {Tapeout Block Antenna} -prompt "Select checks:" -boolean 0 -enable 1 -tool DRC]

CUSTOM::LABEL -prompt "Block level includes all checks minus: \n-DFM \n-DENSITY/COVERAGE \n-antenna checks \n-top-level checks" -master [list $_masterChecks Block] -tool DRC
CUSTOM::LABEL -prompt "Antenna checks ONLY include antenna DRC rules.\nTapeout check must be run separately for tapeout." -master [list $_masterChecks Antenna] -tool DRC
CUSTOM::LABEL -prompt "Tapeout checks include all checks minus: \n-DFM \n-antenna checks \nAntenna checks must be run separately for tapeout." -master [list $_masterChecks Tapeout] -tool DRC

CUSTOM::DEFINE -prompt "Turn Off Grid Checking" -name turnOffGridChecks -boolean 1 -enable 1 -select 0 -tool DRC
CUSTOM::DEFINE -prompt "Turn Off 45 degree checking" -name turnOff45DegreeChecks -boolean 1 -enable 1 -select 0 -tool DRC


#######################################
## LVS Switches
#######################################
CUSTOM::DEFINE -prompt "Do not check sizes" -name DONOTCHECK_SIZES -boolean 1 -select 0 -enable 1 -tool LVS
CUSTOM::DEFINE -name turnOnFilters -boolean 1 -select 0 -enable 1 -prompt "Turn on filters" -tool LVS 
CUSTOM::DEFINE -prompt "Do not check soft connections" -name DONOTCHECK_SOFTCON -boolean 1 -select 0 -enable 1 -tool LVS
CUSTOM::DEFINE -prompt "SMASH Series MOS" -name SMASH_SERIES_MOS -boolean 1 -select 0 -enable 1 -tool LVS 
CUSTOM::DEFINE -prompt "SMASH Series Capacitors" -name SMASH_SERIES_CAPACITORS -boolean 1 -select 0 -enable 1 -tool LVS 
CUSTOM::DEFINE -prompt "Do not smash series resistors" -name DO_NOT_SMASH_SERIES_RESISTORS -boolean 1 -select 0 -enable 1 -tool LVS
